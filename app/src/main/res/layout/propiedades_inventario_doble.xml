<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentMaterialesDual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Primer Card: Detalles del material 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMaterialDetail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvMaterial1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material: 01"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTipoAlmacen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Almacén: Reserva"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvArmario1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Armario: 01"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvBalda1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balda: 03"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvUnidades1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unidades: 45"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvUnidadesMinimas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unidades Mínimas: 13"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Segundo Card: Detalles del material 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMaterialDetail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvMaterial2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material: 01"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTipoAlmacen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Almacén: Principal"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvUnidades2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unidades: 30"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
