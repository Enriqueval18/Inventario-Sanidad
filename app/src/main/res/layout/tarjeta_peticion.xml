<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Tarjeta_peticiones"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Usuario_peticion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario: Pepe"
            android:textSize="16sp"
            android:fontFamily="@font/inter2"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/peticion_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Material: Detergente"
            android:textSize="14sp"
            android:fontFamily="@font/inter2"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/peticion_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad: 10"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter2"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/peticion_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 2025-06-15"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="@font/inter2"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
