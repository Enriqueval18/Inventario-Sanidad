<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TablaInventario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:stretchColumns="*">

    <TableRow
        android:background="@drawable/rounded_indicator"
        android:padding="4dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="8dp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/unidades"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/almacen"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/armario"
            android:textStyle="bold"
            android:padding="8dp" />

    </TableRow>

    <TableRow
        android:id="@+id/Tablafilamaterial"
        android:padding="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">
        <!-- Aqui van los datos que nos llegan de la api -->

    </TableRow>
</TableLayout>
